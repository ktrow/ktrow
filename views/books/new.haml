%link{href: "/assets/stylesheets/books.css", rel: "stylesheet", type: "text/css"}/

.wrapper
  %h1 Create a book
  #content
    %form#new_book.new_book{ action: "create", method: "post", accept: { charset: "UTF-8" } }

      %label{ for: "book_title" } Title
      %input.text_input#book_title{ name: "book[title]", type: "text", autocomplete: 'off' }
      %br/
      %label{ for: "book_url" } URL
      %input.text_input#book_url{ name: "book[url]", type: "url" }
      %br/
      %label{ for: "book_comment" } Comment
      %textarea#book_comment{ name: "book[comment]", type: "text", rows: 7, cols: 30 }
      %br/
      %input.btn{ type: "submit", value: "Save book" }

%footer
  %a#bottom_left{ href: "/" } Home
  %a#bottom_right{ href: "/books" } Books
  %a#top_right{ href: "/books/view" } View
