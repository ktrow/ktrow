#header
#wrapper
  %table.table
    %thead
      %tr
        %th Title
        %th URL
        %th Comment
        %th
    %tbody
      - @books.each do |book|
        %tr
          %td= book.title
          %td.url
            %a{ href: "#{ book.url }" }= book.url
          %td= book.comment
          %td
            %a{ href: "/books/edit/#{ book.id }" } Edit

%footer
  %a#bottom_left{ href: "/" } Home
  %a#bottom_right{ href: "/books" } Books
  %a#top_right{ href: "/books/new" } New
