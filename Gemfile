source 'https://rubygems.org'

gem 'rails', github: 'rails/rails'

gem 'haml-rails', github: 'indirect/haml-rails'
gem 'jquery-rails'
gem 'pg'

group :production do
  gem 'unicorn'
end

group :assets do
  gem 'sass-rails', github: 'rails/sass-rails'

  gem 'uglifier'
end

group :test, :development do
  gem 'pry'
end
