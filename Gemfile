source 'https://rubygems.org'

gem 'rails', '3.2.6'

gem 'haml-rails'
gem 'heroku'
gem 'jquery-rails'
gem 'pg'
gem 'thin'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'bootstrap-sass'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'sass-rails',   '~> 3.2.3'

  gem 'uglifier', '>= 1.0.3'
end

group :test, :development do
  gem 'pry'
end

group :test do
  gem 'capybara'
  gem 'factory_girl_rails'
  gem 'rspec-rails'
end
