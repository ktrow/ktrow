#body {
  background: url(<%= asset_path '../images/norvella.jpg'%>) no-repeat;
  background-size: 100%;
  font-family: 'Libre Baskerville', serif;
  font-size: 14px;
  line-height: 20px;
  color: #e2e2e2;
}

#header {
  width: 1200px;
  margin: 0 auto;
  min-height: 50px;
}

#title {
  margin-left: 500px;
  font-size: 42px;
  line-height: 60px;
  padding-left: 40px;
  color: #c18c28;
  font-weight: bold;
}

#sections {
  width: 1002px;
  margin: 0 auto;
  min-height: 600px;
}

#contact {
  padding-top: 175px;
  margin-left: 750px;
  width: 250px;
  min-height: 300px;
}

#contact > p, ul, li {
  margin-left: 5px;
  padding: 0;
  font-size: 14px;
  line-height: 20px;
  list-style: none;
}

a {
  color: #e2e2e2;
  text-decoration: none;
  font-style: italic;
}

a:hover {
 color: #b3b3b3;
}

#main {
  text-align: right;
  float: left;
  min-height: 350px;
  width: 730px;
  border-right: 1px solid #e2e2e2;
}

#main > p {
  padding: 10px;
}

#footer {
  position: absolute;
  bottom: 20px;
  right: 30px;
}

#mobile {
  display: none;
}

@media all and (max-width: 600px) {
  body {
    font-family: Helvetica, 'Ariel Black';
    background-color: #d9d1ba;
    color: #1e3a40;
    font-weight: bold;
    width: 480px;
  }

  #headerbg {
    z-index: -2;
    position: absolute;
    top: 0;
    left: 0;
    margin: 0;
    width: 480px;
    height: 50px;
    background: #1e3a40;
  }

  .wrapper {
    width: 460px;
    margin: 0 auto;
  }

  #header {
    width: 100%;
  }

  .sections { z-index: 4 }

  #title {
    width: 100%;
    text-align: center;
    color: #d9d1ba;
    font-size: 30px;
    line-height: 40px;
    margin: 0;
    padding: 0;
  }

  #rightstrip {
    position: absolute;
    right: 0;
    top: 0;
    width: 40px;
    background-color: #f2a057;
    height: 100%;
    z-index: -3;
  }

  h3 {
    color: #d9d1ba;
    font-size: 18px;
    line-height: 30px;
    padding: 0 10px;
    background: #1e3a40;
    margin-left: -10px;
    height: 30px;
  }

  h3#bio {
    width: 40%;
  }

  h3#mobile-contact {
    width: 50%;
  }

  ul {
    list-style: none;
    z-index: 4;
  }

  p {
    width: 90%;
    color: #1E3A40;
    z-index: 5;
    font-weight: normal;
    font: 'Helvetica', 'Sans';
  }

  a {
    color: #1E3A40;
    font-weight: normal;
    font-style: italic;
    text-decoration: none;
  }

  #screen {
    display: none;
  }
}
